<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"

 >
    <LinearLayout

        android:id="@+id/ll_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"

        android:gravity="center"
        android:orientation="vertical" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aakhu"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"

        android:minHeight="60dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgFolder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/icon_folder"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFolderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|center"
            android:maxLines="2"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/backgroun_size_nu"
                android:padding="2dp"
                android:id="@+id/txtVideoCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:textColor="@color/video_sub_font_color"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="13sp" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="|"
                android:textColor="@color/video_sub_font_color"
                android:padding="2dp"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txtFolderSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/video_sub_font_color"
                android:layout_marginTop="2dp"
                android:gravity="end"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkboxFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        android:layout_margin="5dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:visibility="visible"
       tools:ignore="ContentDescription" />

    </LinearLayout>
</LinearLayout>