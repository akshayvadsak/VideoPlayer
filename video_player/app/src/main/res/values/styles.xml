<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#191919</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/selector_btn_back</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:actionModeCloseDrawable">@drawable/ic_back</item>
        <item name="actionModeCloseButtonStyle">@style/myclosebutton</item>
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>
    <style name="myclosebutton" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/colorAccent</item> <!-- whatever color -->
    </style>
    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/titileFontColor</item>
    </style>
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- RadioButton -->
    <style name="customRadio" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/popup_text</item>
    </style>

    <!-- Dialog -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/theme</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_background_inset</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="ErrorDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/popup_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">54dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/popup_text</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@drawable/button_plat</item>
    </style>

    <style name="dialog_item_style">
        <item name="android:textColor">@color/item_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minWidth">54dp</item>
    </style>

    <style name="dialog_item_title_style">
        <item name="android:textColor">@color/item_title_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minWidth">74dp</item>
    </style>

    <!-- ExoPlayer -->

    <style name="ExoMediaButtonLock">
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ExoMediaButton">
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:src">@drawable/ic_previous</item>
        <item name="android:contentDescription">@string/exo_controls_previous_description</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:src">@drawable/ic_next</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="ExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="ExoMediaButtonLock.Lock">
        <item name="android:src">@drawable/icon_screen_lock</item>
        <item name="android:contentDescription">@string/exo_controls_lock_description</item>
    </style>

    <style name="ExoMediaButton.Cut_Next">
        <item name="android:src">@drawable/ic_cut_next</item>
        <item name="android:contentDescription">@string/exo_controls_cut_next_description</item>

    </style>

    <style name="ExoMediaButton.Cut_Pre">
        <item name="android:src">@drawable/ic_cut_pre</item>
        <item name="android:contentDescription">@string/exo_controls_cut_pre_description</item>

    </style>

    <style name="ExoMediaButton.Scale">
        <item name="android:src">@drawable/ic_fix_width</item>
        <item name="android:contentDescription">@string/exo_controls_scale_width_description</item>
    </style>

    <style name="NavigationTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:layout_marginBottom">02dp</item>
    </style>

    <!-- Pin -->
    <style name="PinStatus" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PinEntry">
        <item name="android:src">@drawable/selector_pin_entry</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="PinText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/titileFontColor</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="PinNum">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <!--<item name="android:src">@drawable/pin_button_plat</item>-->
    </style>

    <style name="PinBack">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="PinView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <!--<item name="android:background">@color/private_number_part_color</item>-->
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Rate Us-->

    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:textColor">@color/titileFontColor</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:background">@color/hedar_color</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowMinWidthMinor">80%</item>
    </style>

    <style name="CustomSpotDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/loading_dialog_bg</item>
        <item name="DialogSpotColor">#FFFFFF</item>
        <item name="DialogSpotCount">4</item>
    </style>

</resources>
